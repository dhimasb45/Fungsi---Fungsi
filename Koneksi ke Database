var err error
	dsn := "root:ComputerScience*45@tcp(127.0.0.1:3306)/testdb" //Tinggal ganti testdb, disesuaikan dengan database yang digunakan.

	db, err = sql.Open("mysql", dsn)
	if err != nil {
		log.Fatal(err)
	}
	defer db.Close()

	err = db.Ping()
	if err != nil {
		log.Fatal(err)

	}

	fmt.Println("Berhasil terhubung ke database")
